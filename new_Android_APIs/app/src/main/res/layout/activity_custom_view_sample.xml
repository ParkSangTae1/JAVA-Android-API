<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    tools:context="me.blog.eyeballss.android_api.Activities.MyCustomViewSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="[기본값]"/>

        <me.blog.eyeballss.android_api.CustomViews.MyCustomView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="[xml에서 값을 바꿈]"/>

        <me.blog.eyeballss.android_api.CustomViews.MyCustomView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setIcon="@mipmap/ic_launcher"
            app:setInfoText="xml에서"
            app:setDescText="바꿨습니다."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="[id로 view를 찾아서 코드에서 값을 바꿈]"/>

        <me.blog.eyeballss.android_api.CustomViews.MyCustomView
            android:id="@+id/custom_View"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setIcon="@mipmap/ic_launcher"
            app:setInfoText="xml에서"
            app:setDescText="바꿨습니다."/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
